<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% provide :title, t("login") %>
    <h1><%= t "login" %></h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: t("email"), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: t("password"), class: "form-control" %>
      </div>
      <%= f.submit t("login"), class: "btn btn-normal btn-block" %>
    <% end %>
    <p><%= t "new_user" %> <%= link_to t("sign_up"), signup_path %></p>
  </div>
</div>
