<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t("location") %>
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row">
              <div class="form-group">
                <label><%= t("address") %></label>
                <%= f.text_field :address, placeholder: t("address?"), class: "form-control", required: true, id: "autoaddress" %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit t("save"), class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    $("#autoaddress").geocomplete();
  })
</script>
