<% if (logged_in?) && !current_page?(root_path) && !current_page?("/rooms/#{params[:id]}")%>
  <nav class="navbar navbar-default dashboard">
    <div class="container">
      <ul class="nav navbar-nav">
        <li <% if current_page? dashboard_path %> class="active" <% end %> >
          <%= link_to t("dashboard"), dashboard_path %>
        </li>
        <li <% if current_page? rooms_path %> class="active" <% end %> >
          <%= link_to t("manage_listing"), rooms_path %>
        </li>
      </ul>
    </div>
  </nav>
<% end %>
