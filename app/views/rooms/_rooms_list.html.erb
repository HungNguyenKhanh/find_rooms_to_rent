<% rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= link_to image_tag(room.cover_photo :medium), room %><br/>
        </div>
        <div class="panel-body">
          <%= link_to room.name, room %><br/>
          $<%= room.price %> - <%= room.home_type %> -
          <%= pluralize room.bed_room, "bed" %>
        </div>
      </div>
    </div>
<% end %>
