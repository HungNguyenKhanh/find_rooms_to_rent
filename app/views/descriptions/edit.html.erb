<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t("description") %>
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row">
              <div class="form-group">
                <label><%= t("listing_name") %></label>
                <%= f.text_field :name, placeholder: t("listing_name?"), class: "form-control", required: true %>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label><%= t("summary") %></label>
                <%= f.text_area :summary, rows: 5, placeholder: t("summary?"), class: "form-control", required: true %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit t("save"), class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
