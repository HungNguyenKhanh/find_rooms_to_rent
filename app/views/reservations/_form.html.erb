<div class="panel panel-default">
  <div class="panel-heading">
    <span><i class="fa fa-bolt"></i> $<%= @room.price %></span>
    <span class="pull-right"><%= t"per_night" %></span>
  </div>
  <div class="panel-body">
    <form action="">
      <div class="row">
        <div class="col-md-6">
          <label><%= t"check_in" %></label>
          <input type="text" placeholder="<%= t"start_date" %>"
            class="form-control datepicker">
        </div>
        <div class="col-md-6">
          <label><%= t"check_out" %></label>
          <input type="text" placeholder="<%= t"end_date" %>"
            class="form-control datepicker">
        </div>
      </div>
      <h4 class="message-alert text-center"><span id="message"></span></h4>
      <div id="preview" style="display: none">
        <table class="reservation-table">
          <tbody>
            <tr>
              <td><%= t"price" %></td>
              <td class="text-right">$<%= @room.price %></td>
            </tr>
            <tr>
              <td><%= t"night" %></td>
              <td class="text-right">x<span id="reservation_nights"></span></td>
            </tr>
            <tr>
              <td class="total"><%= t"total" %></td>
              <td class="text-right">$<span id="reservation_total"></span></td>
            </tr>
          </tbody>
        </table>
      </div>
      <br/>
      <button type="submit" class: "btn btn-normal btn-block">
        <%= t"book_now" %>
      </button>
    </form>
  </div>
</div>
