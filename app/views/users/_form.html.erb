<div class="panel panel-default">
  <div class="panel-heading">
    <%= t "edit_profile" %>
  </div>
  <div class="panel-body">
    <%= form_for @user,html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label "Name: ", class: "control-label col-md-3" %>
        <div class="col-md-6">
          <%= f.text_field :name, placeholder: t("name"), class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Phone Number: ", class: "control-label col-md-3" %>
        <div class="col-md-6">
          <%= f.text_field :phone_number, placeholder: t("phone_number"), class: "form-control" %>
        </div>
      </div>
      <%= f.submit t("save"), class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>