<% provide :title, t("login") %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="text-center"><%= t "login" %></h1>

    <%= link_to user_facebook_omniauth_authorize_path,
      class: "btn btn-facebook btn-block" do %>
      <i class="fa fa-facebook-official fa-fw"></i><%=t "login_facebook"%>
    <% end %>
    <%= link_to user_google_oauth2_omniauth_authorize_path,
      class: "btn btn-google btn-block" do %>
      <i class="fa fa-google fa-fw"></i><%= t "login_google" %>
    <% end %>

    <hr class="hr-text" data-content="OR">

    <%= form_for(resource, as: resource_name,
      url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: t("email"),
          class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off",
          placeholder: t("password"), class: "form-control" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <% end %>
        <span class="pull-right">
          <%= link_to "Forgot Password", new_user_password_path %>
        </span>
      </div>

      <%= f.submit t("login"), class: "btn btn-normal btn-block" %>
    <% end %>
    <p><%= t "new_user" %> <%= link_to t("sign_up"),
      new_user_registration_path %></p>
  </div>
</div>
