<% provide :title, t("change_password") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2><%= t "change_password" %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
      html: { method: :put }) do |f| %>
      <%= render "shared/devisemes" %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off",
          placeholder: t("password"), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off",
          placeholder: t("password_confirm"), class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("change_password"), class: "btn btn-normal btn-block" %>
      </div>
    <% end %>
  </div>
</div>
