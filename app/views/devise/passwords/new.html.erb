<% provide :title, t("forgot_password") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2><%= t "forgot_password" %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
      html: { method: :post }) do |f| %>
      <%= render "shared/devisemes" %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
        placeholder: t("email"), class: "form-control"%>
      </div>

      <div class="actions">
        <%= f.submit t("send_password_instructions"),
          class: "btn btn-normal btn-block" %>
      </div>
    <% end %>
  </div>
</div>
